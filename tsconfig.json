{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "jsx": "preserve"
 },
  "include": [
    "www/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}